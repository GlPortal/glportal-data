{
	"video": {
		"width": "auto",
		"height": "auto",
		"fullscreen": true,
		"antialiasing": 1,
		"vsync": true,
		"recursive_portal": 3
	},
	"mouse": {
		"sensitivity": 1.00,
		"hide_portals_by_click": true,
		"cursor_visibility": false,
		"bindings": {
			"look_x": ["mouse_x"],
			"look_y": ["mouse_y"]
		}
	},
	"keyboard": {
		"bindings": {
			"jump": ["Space"],
			"forward": ["W", "Up"],
			"back": ["S", "Down"],
			"left": ["A", "Left"],
			"right": ["D", "Right"],
			"quit": ["Q"]
		}
	},
	"controller": {
		"bindings": {
			"jump": ["button_a"],
			"move_x": ["left_stick_x"],
			"move_y": ["left_stick_y"],
			"look_x": ["right_stick_x"],
			"look_y": ["right_stick_y"]
		},
		"sensitivity": {
			"left_stick_x": 1.0,
			"left_stick_y": 1.0,
			"right_stick_x": 0.05,
			"right_stick_y": 0.05
		},
		"dead_zone": {
			"left_stick_x": 8000,
			"left_stick_y": 8000,
			"right_stick_x": 8000,
			"right_stick_y": 8000
		}
	},
	"sound": {
		"enable": true
	},
	"logging": {
		"loglevel": "debug"
	},
	"debug": {
		"gl_context_debug": false,
		"profiler": {
			"enable": false
		},
		"wireframes": {
      "enable": false
    },
    "flying": {
      "enable": true
    }
	}
}
